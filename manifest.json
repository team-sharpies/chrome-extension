{
  "manifest_version": 3,
  "name": "Label Value Extractor",
  "version": "1.0",
  "description": "Extracts label-value pairs from the current tab",
  "permissions": ["activeTab", "scripting", "webNavigation", "identity"],
  "host_permissions": [
    "https://*.login.microsoftonline.com/*",
    "https://*.graph.microsoft.com/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "world": "ISOLATED"
    }
  ]
}
